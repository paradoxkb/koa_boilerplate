extends layout

block content
    div(class=['container', 'justify-content-center'])
        h1= 'TODO Boilerplate'
        p JADE Welcome to #{title}

        .new-task
            input#add_new_task.btn.btn-primary(type='button', value='Add new task')
            form#new_task_form.ml-3.hidden(name='newTaskForm')
                input#new_task_text.form-group.mr-3(type='text', name='newtask')
                input(type='submit', formaction='/task', formmethod='post', value='Save')

        table.tasks-grid.table-stripped.table-bordered.table-hover.mt-3
            thead
                tr
                    th Name
                    th Date
                    th Action
            tbody
                each val in tasks
                    tr
                        td #{val['title']}
                        td #{val['createdAt']}
                        td
                            span.close(id="#{val['_id']}") x

